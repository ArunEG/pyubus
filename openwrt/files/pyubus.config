config pyubus 'main'
	option enabled '1'
	option default_host '127.0.0.1'
	option default_port '80'
	option default_timeout '30'
	option default_ssl '0'
	option verify_ssl '1'
	option ubus_path '/ubus'

config credentials 'local'
	option host '127.0.0.1'
	option username ''
	option password ''
	option description 'Local device credentials'

